<div class="text-center">
  <p style="color: green"><%= notice %></p>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">@<%= @tweet.userName %>_<%= @tweet.id %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary"></h6>
      <p class="card-text">- <%= @tweet.descripcion %></p>
      <%= link_to "Atras", tweets_path, class: "btn btn-outline-success btn-sm" %> <%= link_to "Editar tweet", edit_tweet_path(@tweet), class: "btn btn-outline-warning btn-sm" %>
      <%= button_to "Eliminar tweet", @tweet, method: :delete, class: "btn btn-danger my-2" %>
    </div>
  </div>
</div>
