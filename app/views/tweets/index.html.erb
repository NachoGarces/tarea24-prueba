<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>

<%= form_with url: "tweets/buscar", method: :post do |form| %>
  <%= form.text_field :f %>
  <%= form.submit "Buscar por ID" %>
<% end %>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

<%= link_to "Nuevo tweet", new_tweet_path %>

<%= link_to "Ver mas", tweets_path(:v => 10+params[:v].to_i) %>
